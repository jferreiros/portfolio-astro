<style>
  .nav-container {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
    border: 1px solid var(--color-primary);
    border-radius: 10px;
    padding: 0.5rem;
    background-color:  var(--background-color);
  }

  .nav-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgb(32, 32, 32);
    border-radius: 10px;
    padding: 0.75rem;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .nav-item:hover {
    background-color: var(--color-primary);
    border-color: black;
    color: #000;
  }

  .nav-link {
    text-decoration: none;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .nav-link span {
    font-size: 1.2em;
  }

  .nav-item.active {
  background-color: var(--color-primary); /* Customize the background color */
  border-color: black;
  color: black;
}
</style>