---
// Este es el archivo Card.astro
export interface Props {
  title: string;
  description: string;
  shortDescription: string;
  image: string;
  date: string;
  technologies: string[];
  projectLink: string; // Added projectLink property
}

const { title, description, shortDescription, image, date, technologies, projectLink } = Astro.props;

const colorClasses = [
  "bg-red-200 text-red-800",
  "bg-blue-200 text-blue-800",
  "bg-green-200 text-green-800",
  "bg-yellow-200 text-yellow-800",
  "bg-purple-200 text-purple-800",
  "bg-pink-200 text-pink-800",
  "bg-indigo-200 text-indigo-800"
];

const getRandomColorClass = () => colorClasses[Math.floor(Math.random() * colorClasses.length)];

---

<style>
  .card {
    background-color: var(--background-color);
    border: 1px solid #fff;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    /* margin: 20px; */
  }

  .card img {
    width: 100%;
    height: auto;
  }

  .card-content {
    text-align: left;
  }

  .card-title {
    font-size: 1.2em;
    margin-bottom: 10px;
  }

  .card-description {
    font-size: 1em;
    margin-bottom: 10px;
  }

  .card-short-description {
    font-size: 0.9em;
    color: #666;
    margin-bottom: 10px;
  }

  .card-date {
    font-size: 1rem;
    font-weight: 700;
    color: #fff;
    text-align: right;
    width: 100%;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    align-items: start;
    justify-content: start;
    margin-bottom: 10px;
    gap: 0.5rem;
  }

  .technology {
    border: 1px solid #ddd;
    padding: 5px 10px;
    border-radius: 10px;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.5rem;
  }
</style>

<div class="card">
  <div class="card-date">{date}</div>
  <img src={image} alt={title} />
  <div class="card-content">
    <div class="card-title">{title}</div>
    <div class="card-short-description">{shortDescription}</div>
    <div class="technologies">
      {technologies.map((technology) => (
        <div class={`technology ${getRandomColorClass()}`}>{technology}</div>
      ))}
    </div>
    <div class="card-description">{description}</div>
    {projectLink && (
      <a href={projectLink} target="_blank" rel="noopener noreferrer" class="project-link">
        Link: {projectLink}
        <i class="fas fa-external-link-alt icon"></i>
      </a>
    )}
  </div>
</div>